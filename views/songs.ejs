<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>TopSongsPicker</title>
        <link rel="shortcut icon" href="#">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" href="css/style.css">
        <script src="https://apis.google.com/js/api.js"></script>
        <script src="https://apis.google.com/js/platform.js" async defer></script>
        <script src="lib/jquery-3.6.0.min.js"></script>
        <script src="lib/jquery-ui.js"></script>
        <script type="module" src="js/youtube/playlists/insert-controller.js"></script>
        <script type="module" src="js/youtube/songs-controller.js"></script>
        <script type="module" src="js/state-controller.js"></script>
        <script type="module" src="js/utils.js"></script>
    </head>
    <body>
        <div class="songs-content">
            <div class="song-pool-col">
                <div class="song-cell song-pool-cell">
                    <label class="song-source">Song pool</label>
                </div>
                <div class="song-pool-content-parent sortable">
                    <!--Songs goes here-->
                </div>
            </div>
        
            <div class="song-top-col">
                <div class="song-cell song-top-cell">
                    <label class="song-source">Top 50 songs</label>
                </div>
                <div class="song-top-content-parent sortable">
                    <!--Top songs goes here-->
                    
                </div>
            </div>
        </div>
        <button id="create-save-button" class="btn btn-dark" onclick="saveState()">Save state</button>
    </body>

    <script>
        $( function() {
            $(".song-pool-content-parent").sortable({
                connectWith: ".sortable"
            });

            $(".song-top-content-parent").sortable({
                connectWith: ".sortable",
                receive: function( event, ui ) {
                    checkSongsCap($(this));
                }
            });

            setTimeout(() => 
            {
                var playlistsJSON = `<%- JSON.stringify(playlists) %>`;
                if (playlistsJSON == '') loadState();
                else {
                    var playlists = JSON.parse(playlistsJSON);
                    console.log(playlists);
                    getAllSongsOf(playlists);
                }
            }, 500);
        });
    </script>
</html>